$gray = #231f1c
$accent = #44ed98
$accent2 = #6553f6

*
    box-sizing border-box

html
body 
    overflow-x hidden
h1
    position relative

body 
    background-color $gray
    color #fff
    font-family 'Open Sans'
    font-size 16px
    overflow-x hidden
    position relative
    padding-bottom 100px

.main
    width 1200px
    margin 30px auto
    box-shadow 0 0 50px 0 rgba(0, 0, 0, 0.5)
    background-color $gray
    border-radius 10px
    padding 60px 100px
    position relative
    overflow hidden

.main-photo
    width 300px
    height 300px
    border-radius 50%
    overflow hidden
    margin-right 60px

.header
    &__nav
        margin-bottom 120px

.header-nav-list
    list-style-type none
    display flex
    padding 0
    margin 0
    &__item
        margin-right 30px
    &__btn
        background none
        border none 
        padding 0
        transition color .2s ease
        color #fff
        font-weight 600
        cursor pointer
        &:hover
            color $accent

.home
    display flex
    align-items center

.home-info
    &__heading
        font-weight 600
        font-size 42px
        line-height 1.3
        margin 0

h2
    font-size 32px
    font-weight 300
    margin 0
    background-color $accent
    color $gray
    padding 7px 20px
    display inline-block
    border-radius 7px

.about
    &__text
        font-size 21px
        font-weight 300
        line-height 1.9
        position relative
        span
            background-color $accent2
            font-weight 800
            padding 3px 10px
            margin 0 5px
            color $gray
            border-radius 30px
            white-space nowrap

.workplace
    padding-left 50px
    margin-top 50px
    position relative
    &:before
        content ''
        width 15px
        height 15px
        border-radius 50%
        display inline-block
        position absolute
        top 0
        left -10px
        border 3px solid $accent
        background-color $gray
        overflow hidden
        z-index 1
    &:after
        content ''
        display inline-block
        position absolute
        width 2px
        top 0
        left 0
        bottom -50px
        background-color $accent
    &__title
        font-size 24px
        font-weight 400
        display inline-block
        margin 0
        line-height 1
    &__description
        font-size 18px
        line-height 1.5
    &:last-child:after
        bottom 0

section
    margin-bottom 100px
    &:last-child
        margin-bottom 0

.circle
    position absolute
    border-radius 50%
    z-index 0
    &--1
        background-color $accent
        box-shadow 0 0 45px 0px $accent
        top -150px
        left 50%
        width 500px
        height 500px
        transform translate3d(150px, 0, 0) 
        animation-duration 5s
        animation-name circle-1-animation
        animation-iteration-count infinite
        &.circle--outside
            top -120px
    &--2
        background-color $accent2
        box-shadow 0 0 20px 1px $accent2
        width 300px
        height 300px
        top 800px
        right 50%
        transform translate3d(-400px, 0, 0)
        animation-duration 3s
        animation-name circle-2-animation
        animation-iteration-count infinite
        &.circle--outside
            top 830px
    &--3
        background-color $accent
        box-shadow 0 0 20px 1px $accent
        width 600px
        height 600px
        top 1400px
        right 50%
        transform translate3d(850px, 0, 0)
        animation-duration 5s
        animation-name circle-3-animation
        animation-iteration-count infinite
        &.circle--outside
            top 1430px

@keyframes circle-1-animation {
  0% {
    transform translate3d(150px, 0, 0) 
  }

  50% {
    transform translate3d(0, 150px, 0) 
  }

  100% {
    transform translate3d(150px, 0, 0) 
  }
}

@keyframes circle-2-animation {
  0% {
    transform translate3d(-400px, 0, 0) 
  }

  50% {
    transform translate3d(-500px, 150px, 0) 
  }

  100% {
    transform translate3d(-400px, 0, 0) 
  }
}

@keyframes circle-3-animation {
  0% {
      transform translate3d(850px, 0, 0)
  }

  50% {
      transform translate3d(1000px, -200px, 0)
  }

  100% {
      transform translate3d(850px, 0, 0)
  }
}  

.portfolio-inner
    margin 0 -100px

.portfolio-slide
    display block
    position relative
    img 
        width 100%
        position relative
        z-index 1
    &:after
        width 100px
        height 100px
        content ''
        display block
        position absolute
        top 0
        left 35px
        border-radius 50%
        background-color $accent2

.education
    font-size 18px

.react-projects
    display flex
    justify-content space-between
    margin-top 50px

.react-project 
    text-decoration none !important
    color #fff !important
    background #6553f6
    width 300px
    height 300px
    display inline-block
    text-align center
    border-radius 50%
    font-size 32px
    font-weight 300
    line-height 300px
    box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.5)

.contact-links
    margin-top 45px
    display flex

.contact-link
    margin-right 30px
    transition all .2s ease
    display flex
    align-items center
    justify-content center
    position relative
    &:last-child
        margin-right 0
    &:hover
    &:focus
    &:active
        text-decoration none
        color #fff
    img 
        width 30px
        position relative
        z-index 1
    &:after
        content ''
        display inline-block
        width 60px
        height 60px
        position absolute
        opacity 0
        top 50%
        left 50%
        margin -30px 0 0 -30px
        border-radius 50%
        background-size 200% 200%
        background-color #00e4a0
        background-position 100% 7%
        transition all .2s ease
        background-image linear-gradient(48deg, #0f98e9 0, #00e4a0 50%, #0f98e9 100%)
    &:hover:after 
        opacity 1
.box
.sm-circle
.triangle
    width 50px
    height 50px
    position absolute
    animation-duration 40s   
    animation-name falling-animation
    animation-timing-function linear
    transform translate3d(0, 0, 0) rotate(0)
    top -10%


.box
    border 5px solid $accent2
    box-shadow 0 0 50px 0 $accent2

.sm-circle
    border-radius 50%
    border 5px solid $accent
    box-shadow 0 0 50px 0 $accent

@keyframes falling-animation
    0%
        top -10%

    90%
        opacity 1

    100%
        top 90%
        opacity 0
        transform translate3d(0, 0, 0) rotate(360deg)

.glide__bullets
    bottom 0

@media screen and (max-width: 1200px)
    .main
        width 100%
        margin 30px 0
        border-radius 0

@media screen and (max-width: 767px)
    body 
        padding-bottom 0
    .main
        padding 60px 15px
    .home
        flex-direction column
    .header
        display none
    section
        margin-bottom 30px
    .main-photo
        margin 0 0 15px
    .home-info
        &__heading
            font-size 28px
            text-align center
    .about__text
        font-size 16px
    h2
        font-size 22px
    .workplace
        padding-left 25px

    .react-projects
        flex-direction column
        align-items center
        margin-top 30px
    
    .react-project
        width 200px
        height 200px
        line-height 200px
        margin-bottom 30px
        &:last-child
            margin-bottom 0

    .portfolio-slide img,
    .portfolio-slide
        width 300px !important
        margin 0 auto